<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.lfns.DebugActivity">

    <TextView
        android:text=""
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/hello_world" />

    <Button android:text="Wed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button_wed"
        android:layout_below="@+id/hello_world"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="22dp"
        android:onClick="readLondonSkate" />

    <Button android:text="Sunday "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button_sunday"
        android:onClick="readSundayStroll"
        android:layout_above="@+id/check_status"
        android:layout_toRightOf="@+id/button_friday" />

    <Button android:text="Friday"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button_friday"
        android:onClick="readLfns"
        android:layout_alignTop="@+id/button_wed"
        android:layout_toRightOf="@+id/button_wed" />

    <Button android:text="Alarm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button_alarm"
        android:onClick="testAlarm"
        android:layout_alignTop="@+id/button_sunday"
        android:layout_toRightOf="@+id/button_sunday" />


    <TextView
        android:text="not checked"
        android:id="@+id/check_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button_wed"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="47dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="no details"
        android:id="@+id/other_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="33dp"
        android:layout_below="@+id/check_status"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/check_status"
        android:layout_alignEnd="@+id/check_status" />

</RelativeLayout>
